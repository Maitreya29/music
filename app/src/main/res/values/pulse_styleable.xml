<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PulseToolbar">
        <attr name="toolbarNavigationIcon" format="reference" />
        <attr name="toolbarQuickActionIcon" format="reference" />
        <attr name="toolbarOverflowIcon" format="reference" />
        <attr name="toolbarTitle" format="reference" />
        <attr name="toolbarAccentTitle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingsCategoryItem">
        <attr name="settingItemIcon" format="reference" />
        <attr name="settingItemIconColor" format="reference" />
        <attr name="settingItemBackgroundAlpha" format="float" />
        <attr name="settingItemTitle" format="string" />
        <attr name="settingItemText" format="string" />
        <attr name="android:textAppearance" />
        <attr name="android:textStyle" />
        <attr name="settingItemColoredIcon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingsToggleableItem">
        <attr name="settingToggleableItemIcon" format="reference" />
        <attr name="settingToggleableItemTitle" format="string" />
        <attr name="settingToggleableItemText" format="string" />
        <attr name="settingToggleableItemEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColoredIconView">
        <attr name="icon" format="reference" />
        <attr name="iconColor" format="reference" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconBackgroundShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <attr name="backgroundColorAlpha" format="float" />
        <attr name="desaturatedColorInDarkMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColorView">
        <attr name="color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ValueSlider">
        <attr name="startValue" format="integer" />
        <attr name="endValue" format="integer" />
        <attr name="defaultValue" format="integer" />
        <attr name="stepSize" format="integer" />
        <attr name="unit" format="string" />
    </declare-styleable>

    <declare-styleable name="MediaArtImageView">
        <attr name="radiusTopLeft" format="dimension" />
        <attr name="radiusTopRight" format="dimension" />
        <attr name="radiusBottomLeft" format="dimension" />
        <attr name="radiusBottomRight" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="cornerType" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AccentColorMaterialButton">
        <attr name="accentButtonStyle">
            <enum name="text" value="0" />
            <enum name="filled" value="1" />
            <enum name="outlined" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ButtonShortcut">
        <attr name="shortcutIcon" format="reference" />
        <attr name="shortcutIconColor" format="color|reference" />
        <attr name="shortcutTitle" format="string" />
        <attr name="colorsDesaturatedInDarkMode" format="boolean" />
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<com.hardcodecoder.pulsemusic.views.CustomToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marquee_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:contentInsetEnd="72dp"
    app:contentInsetEndWithActions="72dp"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="@drawable/ic_keyboard_backspace">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/marque_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:requiresFadingEdge="horizontal"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />
</com.hardcodecoder.pulsemusic.views.CustomToolbar>
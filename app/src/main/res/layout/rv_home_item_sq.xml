<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="154dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <com.nezukoos.music.views.MediaArtImageView
        android:id="@+id/home_rv_list_item_album_art"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:scaleType="centerCrop"
        app:radius="@dimen/rounding_radius_8dp"
        tools:ignore="contentDescription"
        tools:src="@tools:sample/avatars" />

    <include layout="@layout/rv_home_item_title_text_view" />

    <include layout="@layout/rv_home_item_sub_text_view" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_toggleable_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Body1"
        tools:text="@tools:sample/full_names" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_toggleable_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_toggleable_item_title"
        android:layout_alignStart="@id/setting_toggleable_item_title"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/setting_toggleable_item_switch"
        android:maxLines="4"
        android:textAppearance="@style/Appearance.Text.Body2"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="@tools:sample/lorem/random" />

    <com.radiant.music.views.AccentColorSwitch
        android:id="@+id/setting_toggleable_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</merge>
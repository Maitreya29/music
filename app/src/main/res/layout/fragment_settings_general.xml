<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="0dp">

    <com.hardcodecoder.pulsemusic.views.AccentColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="@string/category_loader"
        android:textAppearance="@style/Appearance.Text.Overline" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItem
        android:id="@+id/ignore_folder_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        app:settingItemIcon="@drawable/ic_rule_folder"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/ignored_folder_desc"
        app:settingItemTitle="@string/ignored_folder_title" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItem
        android:id="@+id/duration_filter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        app:settingItemIcon="@drawable/ic_filter"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/duration_filter_desc"
        app:settingItemTitle="@string/duration_filter_title" />

    <com.hardcodecoder.pulsemusic.views.ValueSlider
        android:id="@+id/duration_filter_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:endValue="60"
        app:startValue="0"
        app:unit="@string/duration_filter_unit" />

    <com.hardcodecoder.pulsemusic.views.AccentColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="@string/category_others"
        android:textAppearance="@style/Appearance.Text.Overline" />

    <com.hardcodecoder.pulsemusic.views.SettingsToggleableItem
        android:id="@+id/remember_playlist_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:settingToggleableItemIcon="@drawable/ic_save"
        app:settingToggleableItemText="@string/remember_playlist_desc"
        app:settingToggleableItemTitle="@string/remember_playlist_title" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItem
        android:id="@+id/home_section_playlist_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        app:settingItemIcon="@drawable/ic_category"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/edit_playlist_section_desc"
        app:settingItemTitle="@string/edit_playlist_sections_title" />
</LinearLayout>
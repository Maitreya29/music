<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:requiresFadingEdge="horizontal"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="@style/Appearance.Text.Headline6"
        tools:text="Filename: Let me love you.mp3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Track: Let me love you (Deluxe)" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_album"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Album: Let me love you" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Artist: Selina Gomez" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_file_size"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="File size: 11.56 MB" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_file_type"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="File type: audio/mp3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_bitrate"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Bit rate: 320kbps" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_sample_rate"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Sample rate: 44100Hz" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_channel_count"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAppearance="@style/Appearance.Text.Subtitle2"
        tools:text="Number of channels: 2" />

    <com.hardcodecoder.pulsemusic.views.AccentColorMaterialButton
        android:id="@+id/dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/okay"
        app:accentButtonStyle="text" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="8dp"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="20dp"
    android:paddingEnd="24dp">

    <com.nezukoos.music.views.MediaArtImageView
        android:id="@+id/list_item_album_art"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:radius="21dp"
        tools:ignore="contentDescription"
        tools:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <include
        layout="@layout/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@id/list_item_album_art"
        android:layout_toEndOf="@id/list_item_album_art" />

    <include
        layout="@layout/list_item_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/list_item_album_art"
        android:layout_toEndOf="@id/list_item_album_art" />
</RelativeLayout>
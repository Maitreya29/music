<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <com.nezukoos.music.views.AccentColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seek_duration_selector_title"
        android:textAppearance="@style/Appearance.Text.Subtitle1" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/forward_seek"
        android:textColor="@color/shit"/>

    <com.nezukoos.music.views.ValueSlider
        android:id="@+id/forward_seek_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:endValue="60"
        app:startValue="1"
        app:unit="@string/duration_filter_unit"
        tools:defaultValue="10" 
        android:textColor="@color/shit"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reverse_seek"
        android:textColor="@color/shit"/>

    <com.nezukoos.music.views.ValueSlider
        android:id="@+id/backwards_seek_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        app:endValue="60"
        app:startValue="1"
        app:unit="@string/duration_filter_unit"
        tools:defaultValue="10" 
        android:textColor="@color/shit"
        android:color="@color/shit"/>

    <com.nezukoos.music.views.AccentColorMaterialButton
        android:id="@+id/seek_duration_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="@string/set"
        app:accentButtonStyle="text" 
        android:textColor="@color/shit"/>
</LinearLayout>